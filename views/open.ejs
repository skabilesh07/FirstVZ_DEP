<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="open.css">
    <link rel="stylesheet" href="//cdn.datatables.net/2.1.8/css/dataTables.dataTables.min.css">
    <title>Document</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            background-color: #121212;
            color: #f0f0f0;
        }
        h1 {
            color: #4CAF50;
            text-align: left;
            margin-bottom: 20px;
        }
        #form {
            width: 40%;
            padding: 20px;
            border-radius: 8px;
            display: block;
            margin: 20px 0;
        }
        #toggle {
            position: fixed;
            top: 10px;
            right: 10px;
            padding: 10px;
            background-color: #333;
            color: #f0f0f0;
            border-radius: 5px;
        }
        input[type="text"] {
            width: calc(100% - 24px);
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #444;
            border-radius: 4px;
            background-color: #333;
            color: #ffffff;
        }
        button {
            width: auto;
            padding: 10px 15px;
            margin: 10px 0;
            border: none;
            background-color: #4CAF50;
            color: rgb(251, 251, 251);
            cursor: pointer;
            transition: background-color 0.3s ease;
        }
        button:hover {
            background-color: #45a049;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }
        th, td {
            padding: 12px;
            border: 1px solid #444;
            text-align: left;
        }
        th {
            background-color: #1e1e1e; /* Matte black header */
            color: #f0f0f0;
            font-weight: bold;
        }
        tr:hover {
            background-color: #333;
        }
    </style>
</head>
<body>
    <h1>SERVODESK VERSION CONTROL</h1>

    <form action="/datatransfer" method="POST" id="form">
        <input type="text" name="branchname" placeholder="BranchName" required>
        <input type="text" name="Dependency" placeholder="Dependency" required>
        <textarea name="Change log" placeholder="Change log" required rows="4" style="width: calc(100% - 24px); padding: 10px; margin: 10px 0; border: 1px solid #444; border-radius: 4px; background-color: #333; color: #f0f0f0;"></textarea>
        <input type="text" name="Ticket ID" placeholder="Ticket ID" required>
        <input type="text" name="Developer name" placeholder="Developer name" required>
        <input type="text" name="prid" placeholder="PRID" required>
        <button type="submit">SUBMIT</button>
    </form>
    <div id="toggle">
        <button onclick="hideform()">HIDE</button>
    </div>

    <% if (users && users.length > 0) { %>
        <form id="approvalForm" action="/approved" method="POST">
            <table id="dataTable" class="display">
                <thead>
                    <tr>
                        <th><input type="checkbox" id="select-all" onclick="toggleAllCheckboxes(this)"></th>
                        <th>Branch Name</th>
                        <th>Dependency</th>
                        <th>Change Log</th>
                        <th>Ticket ID</th>
                        <th>Developer Name</th>
                        <th>IsApproved</th>
                        <th>IsPublished</th>
                        <th>Version Number</th>
                        <th>Approved Date</th>
                        <th>Published Date</th>
                        <th>PR ID</th>
                        
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                        <tr>
                            <td><input type="checkbox" class="row-checkbox" name="selectedUsers" value="<%= user._id %>"></td>
                            <td><%= user.BranchName %></td>
                            <td><%= user.Dependency %></td>
                            <td><%= user.ChangeLog %></td>
                            <td><%= user.TicketID %></td>
                            <td><%= user.DeveloperName %></td>
                            <td><%= user.IsApproved %></td>
                            <td><%= user.IsPublished %></td>
                            <td><%= user.VersionNumber %></td>
                            <td><%= user.ApprovedDate %></td>
                            <td><%= user.PublishedDate %></td>
                            <td><%= user.PRID %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
            <input type="text" name="version num" placeholder="Version number" required>
            <button type="submit" name="action" value="approve">Approve</button>
            <button type="submit" name="action" value="publish">Publish</button>
        </form>
        <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
        <script src="//cdn.datatables.net/2.1.8/js/dataTables.min.js"></script>
        <script>
            $(document).ready(function() {
                $('#dataTable').DataTable({
                    "paging": true, // Enable pagination
                    "searching": true, // Enable search filter
                    "ordering": true, // Enable sorting
                    "info": true // Show table information
                });
            });

            function toggleAllCheckboxes(source) {
                const checkboxes = document.querySelectorAll('.row-checkbox');
                checkboxes.forEach(checkbox => {
                    checkbox.checked = source.checked;
                });
            }
            function hideform(){
            const form = document.getElementById("form");
            form.style.display = form.style.display === "none" ? "block" : "none";
        }
        </script>
    <% } else { %>
        <p>No data available to display.</p>
    <% } %>
</body>
</html>